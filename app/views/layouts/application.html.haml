!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title ChordBlog
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    - if author_signed_in?
      %div.pull-right
        = "Logged in as "
        %strong= current_author.name
        %p.btn.btn-default= link_to "Edit Profile", edit_author_registration_path
        %p.btn.btn-danger= link_to "Log out", destroy_author_session_path, method: :delete
    %p.alert= alert
    = yield
