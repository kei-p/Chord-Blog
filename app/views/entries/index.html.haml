.container
  - @entries.each do |entry|
    - entry = EntryDecorator.new(entry)
    .card.entry
      .card-header
        .entry__title= link_to "#{entry.title}", entry_path(entry)
        %div
          %span.entry__author-name= entry.user.name
      .card-block
        = render 'chord_progression', chord_body: entry.chord_body, type: :thumbnail
