= form_for @entry, :html => { :class => "form-horizontal entry" } do |f|
  - if @entry.errors.any?
    #error_expl.panel.panel-danger
      .panel-heading
        %h3.panel-title
          = pluralize(@entry.errors.count, "error")
          prohibited this entry from being saved:
      .panel-body
        %ul
          - @entry.errors.full_messages.each do |msg|
            %li= msg
  .form-group
    = f.label :title, :class => 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :title, :class => 'form-control'
  .form-group
    = f.label :body, :class => 'control-label col-lg-2'
    .col-lg-10
      = f.text_area :body, :class => 'form-control', :rows => '10'
  .form-group
    .col-lg-offset-2.col-lg-10
      = f.submit nil, :class => 'btn btn-primary'
      = link_to t('.cancel', :default => t("helpers.links.cancel")),
        entries_path, :class => 'btn btn-default'
